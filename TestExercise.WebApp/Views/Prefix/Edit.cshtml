@model TestExercise.ViewModels.Catalogs.CreateEditPrefixNumbersRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prefix number</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrefixId" />
            <div class="form-group">
                <label asp-for="OperatorId" class="control-label">Operator</label>
                <select asp-for="OperatorId" class="form-control" asp-items="@(new SelectList(Model.Operators, "Id", "ProviderName"))">
                    >
                    <option>Please select one</option>
                </select>
                <input type="hidden" asp-for="OperatorId" />
            </div>
            <div class="form-group">
                <label asp-for="PrefixNumber" class="control-label">Last 2 characters</label>
                <input asp-for="PrefixNumber" class="form-control" required placeholder="090" />
                <span asp-validation-for="PrefixNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
